<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VALHÄUS</title>

    <!-- ===== Core Styles ===== -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- ===== Nimbus Theme ===== -->
    <link rel="stylesheet" href="~/css/nimbus/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/nimbus/onepage.css" />
    <link rel="stylesheet" href="~/css/nimbus/vendors/aos.css" />

    <!-- ===== Icons ===== -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- ===== Dark Mode Styles ===== -->
    <link rel="stylesheet" href="~/css/DarkMode/dark-mode.css" />

    <!-- ===== Custom Site Styles ===== -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VALHÄUS.styles.css" asp-append-version="true" />

    @* == Nofification Messages == *@

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />


    <!-- ===== Page-Specific Styles ===== -->
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- ===== Navigation Header ===== -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Brand Logo -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <strong>VALHÄUS</strong>
                </a>

                <!-- Mobile Menu Toggle -->
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation Menu -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Home Link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>

                        <!-- Category Link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Category" asp-action="Index">
                                <i class="bi bi-grid"></i> Category
                            </a>
                        </li>

                        <!-- Privacy Link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-check"></i> Privacy
                            </a>
                        </li>
                    </ul>

                    <!-- Simple Circular Dark Mode Toggle -->
                    <div class="d-flex align-items-center">
                        <button id="theme-toggle" class="btn-theme-toggle" title="Toggle Dark Mode" aria-label="Toggle dark mode">
                            <i class="bi bi-sun-fill theme-icon"></i>
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- ===== Main Content Area ===== -->
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification"> </partial>
            @RenderBody()
        </main>
    </div>


    <!-- ===== Footer ===== -->
    <footer class="border-top footer text-muted mt-4 py-2">
        <div class="container text-center">
            <p class="mb-0 small">
                &copy; @DateTime.Now.Year <strong>VALHÄUS</strong>
                @* <span class="mx-2">|</span> *@
                @* <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy</a> *@
                @* maybe i add my gihub link or contact ... *@
            </p>
        </div>
    </footer>

    <!-- ===== Scripts ===== -->
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Nimbus Theme JS -->
    <script src="~/js/nimbus/bootstrap.bundle.min.js"></script>
    <script src="~/js/nimbus/vendors/aos.js"></script>
    <script src="~/js/nimbus/custom.js"></script>

    <!-- Dark Mode Toggle (NEW Simple Style) -->
    <script src="~/js/DarkMode/dark-mode-toggle.js"></script>

    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Page-Specific Scripts -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

