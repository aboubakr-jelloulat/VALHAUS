@using Valhaus.Models.Models
@model Product

@section Styles
{
    <link rel="stylesheet" href="~/css/Category/category-form.css" />
    <link rel="stylesheet" href="~/css/Category/category-management.css" />
}

<!-- Header Section -->
<div class="form-header">
    <h1>VALHÄUS</h1>
    <div class="accent-line"><span></span></div>
    <h2 class="form-title">Delete Product</h2>
    <p class="form-subtitle warning-text">
        <i class="bi bi-exclamation-triangle"></i>
        Are you sure you want to delete this product? This action cannot be undone.
    </p>
</div>

<!-- Form Container -->
<div class="form-container delete-container">
    <form asp-controller="Product" asp-action="Delete" method="post" class="product-form">

        <!-- Hidden ID -->
        <input asp-for="Id" type="hidden" />

        <!-- Title -->
        <div class="form-group">
            <label asp-for="Title" class="form-label">
                <i class="bi bi-box-seam"></i>
                Product Title
            </label>
            <input asp-for="Title"
                   type="text"
                   class="form-input input-readonly"
                   readonly />
        </div>

        <!-- SKU -->
        <div class="form-group">
            <label asp-for="SKU" class="form-label">
                <i class="bi bi-upc-scan"></i>
                SKU
            </label>
            <input asp-for="SKU"
                   type="text"
                   class="form-input input-readonly"
                   readonly />
        </div>

        

        <!-- List Price -->
        <div class="form-group">
            <label asp-for="ListPrice" class="form-label">
                <i class="bi bi-cash-stack"></i>
                List Price
            </label>
            <input asp-for="ListPrice"
                   type="number"
                   class="form-input input-readonly"
                   readonly />
        </div>

        <!-- Price -->
        <div class="form-group">
            <label asp-for="Price" class="form-label">
                <i class="bi bi-cash"></i>
                Price (1–50)
            </label>
            <input asp-for="Price"
                   type="number"
                   class="form-input input-readonly"
                   readonly />
        </div>

        <!-- Price50 -->
        <div class="form-group">
            <label asp-for="Price50" class="form-label">
                <i class="bi bi-cash"></i>
                Price (50+)
            </label>
            <input asp-for="Price50"
                   type="number"
                   class="form-input input-readonly"
                   readonly />
        </div>

        <!-- Price100 -->
        <div class="form-group">
            <label asp-for="Price100" class="form-label">
                <i class="bi bi-cash"></i>
                Price (100+)
            </label>
            <input asp-for="Price100"
                   type="number"
                   class="form-input input-readonly"
                   readonly />
        </div> 

        <!-- Description -->
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="form-group">
                <label asp-for="Description" class="form-label">
                    <i class="bi bi-file-text"></i>
                    Description
                </label>
                <textarea asp-for="Description"
                          class="form-input input-readonly"
                          rows="3"
                          readonly></textarea>
            </div>
        }

        <!-- Action Buttons -->
        <div class="form-actions">
            <button type="submit" class="btn-delete">
                <i class="bi bi-trash3"></i>
                Delete Product
            </button>
            <a asp-controller="Product" asp-action="Index" class="btn-cancel">
                <i class="bi bi-x-circle"></i>
                Cancel
            </a>
        </div>

    </form>
</div>
